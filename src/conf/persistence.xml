<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
  <persistence-unit name="TccPU" transaction-type="JTA">
    <provider>org.hibernate.ejb.HibernatePersistence</provider>
    <jta-data-source>java:/jboss/datasources/PostgresqlDS</jta-data-source>
    <class>modelo.Cidade</class>
    <class>modelo.Estado</class>
    <class>modelo.Nome_Lojas</class>
    <class>modelo.Reclamacoesbr2014</class>
    <class>modelo.Reclamacoesbr2015</class>
    <class>modelo.Reclamacoesbr2016</class>
    <class>modelo.Reclamacoesbr2017</class>
    <class>modelo.Sindec2010</class>
    <class>modelo.Sindec2011</class>
    <class>modelo.Sindec2012</class>
    <class>modelo.Sindec2013</class>
    <class>modelo.Sindec2014</class>
    <class>modelo.Sindec2015</class>
    <class>modelo.Sindec2016</class>
    <exclude-unlisted-classes>true</exclude-unlisted-classes>
    <properties>
      <property name="hibernate.hbm2ddl.auto" value="update"/>
      
    </properties>
  </persistence-unit>
</persistence>
